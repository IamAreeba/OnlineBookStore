@model BookDisplayModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="my-4" >
   
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">


        <div class="col-12">
            <label class="visually-hidden" for="genreId">Genres</label>
            <select class="form-select" id="genreId" name="genreId">

                <option selected>Genre...</option>
                @foreach(var genre in Model.Genres)
                {
                    <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id"> @genre.GenreName </option>
                }

            </select>
        </div>

      <div class="col-12">
            <label class="visually-hidden" for="sterm">Search By Title</label>
        <div class="input-group"> 
          <div class="input-group-text"> </div>
                <input type="text" class="form-control" id="sTerm" name="sTerm" value="@Model.STerm" placeholder="Search By Title">
        </div>
      </div>

      <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" class="btn btn-dark"> Reset </a>
      </div>
    </form> 
   
</div>

<div class="row my-4">

    @foreach (var book in Model.Books)
    {
        <div class="col-6 col-md-4 col-lg-3 mb-4">
            <div class="card" style="width: 100%;">

                @if (string.IsNullOrEmpty(book.Image))
                {
                    <img src="~/images/no image.png" class="card-img-top" alt="No Image">
                }
                else
                {
                    <img src="~/images/@book.Image" class="card-img-top" alt="No Image">
                }

                <div class="card-body">
                    <h5 class="card-title">@book.BookName</h5>
                    <p class="card-text">
                        <b>Genre:</b> @book.GenreName <br />
                        <b>Author:</b> @book.AuthorName <br />
                        <b>Price:</b> @book.Price <br />
                        <b>Quantity:</b> @book.Quantity <br />
                    </p>
                    <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add To Cart</button>
                </div>

            </div>
        </div>
    }

    @foreach(var book in Model.Books)
    {
        
    }

</div>

@section Scripts {
    <script>
        // console.log("Hello");
        async function add(bookId){

            var usernameEl = document.getElementById("username");
            if(usernameEl == null){
                window.location.href = "/Identity/Account/Login";
            }

            try{
                var response = await fetch(`/Cart/AddItem?bookId=${bookId}`);
                if(response.status == 200){
                    var results = await response.json();
                    console.log(results);
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = results;
                    window.location.href = "#cartCount";
                }
            }

            catch(err){
                console.log(err);
            }
        }
        // console.log("Areeba");
    </script> 
}
